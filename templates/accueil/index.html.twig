{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block body %}
<style>
    .film:hover{
        width: 440px;
        height: 540px;
    }

    .film.lazy-load.is-loaded {
        opacity: 1;
    }

    .category{
        position: relative;
        display: inline-block;
        text-decoration: none;
        font-size: 1.75rem;
        font-weight: 300;
        line-height: 2.5rem;
        color: #a1a4a7;
        margin-right: 1rem;
        padding: 0;
        border: 0;
        background: transparent;
        outline: none;
        cursor: pointer;
    }

    .category:hover{
        position: relative;
        display: inline-block;
        text-decoration: none;
        font-size: 1.75rem;
        line-height: 2.5rem;
        margin-right: 1rem;
        padding: 0;
        border: 0;
        background: transparent;
        outline: none;
        cursor: pointer;
        color: #1c2129;
        font-weight: 400;
    }
</style>

<div class="example-wrapper">
    <h1>Bienvenue au cinema de grenoble</h1>

    {% if app.user %}
        <p>bienvenue {{ app.user.name }} !</p>
        <a href="{{ path('logout') }}">deconnection</a>
    {% endif %}

    <a href="{{ path('app_inscription') }}">Inscription</a>
    <a href="{{ path('login') }}">Connection</a>
        <a class="category" href="{{ path('app_accueil')}}">Tout</a>
    {% for Category in Category %}
        <a class="category" href="{{ path('category', { id: Category.id})}}">{{ Category.type }}</a>
    {% endfor %}

    {{ form_start(form) }}
    {{ form_rest(form) }}
    <input type="submit" value="Valider" />
    {{ form_end(form) }}

    {% for Film in Films %}
        <h1>{{ Film.name }}</h1>
        <div>
            <a href="{{ path('ResumerFilm', { id: Film.id})}})}}">
                <img class="film" src="{{ Film.image }}">
            </a>
            <video href="{{ Film.bandeAnnonce }}"></video>
            <a href="{{ path('app_horaire_film', {id: Film.id}) }}">Voir les s√©ances</a>
            {% if app.user %}
                <a href="{{ path('likefilm', {idfilm: Film.id, iduser: app.user.id}) }}">
                    <img width="25" src="https://www.pinclipart.com/picdir/middle/552-5527327_heart-clipart-black-and-white-white-heart-clipart.png">
                </a>
                {% if reviewlist %}
                    {% for reviewlist in reviewlist %}
                        {% if reviewlist.film.id == Film.id and reviewlist.user.id == app.user.id %}
                            <a href="{{ path('likefilm', {idfilm: Film.id, iduser: app.user.id}) }}">
                                <img width="25" style="position: relative;left: -28px; top: 0px" src="https://upload.wikimedia.org/wikipedia/commons/thumb/f/f1/Heart_coraz%C3%B3n.svg/1200px-Heart_coraz%C3%B3n.svg.png">
                            </a>
                        {% endif %}
                    {% endfor %}
                {% endif %}
            {% endif %}
        </div>
    {% endfor %}
</div>
{% endblock %}
